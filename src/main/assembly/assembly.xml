<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>osgi-engine-zip</id>	
	<formats>
<!-- 		<format>dir</format> -->
		<format>zip</format>
		<!-- <format>tar.gz</format> -->
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<file>
			<source>src/main/resources/launch.ini</source>
			<outputDirectory>eclipse/</outputDirectory>
		</file>
		<file>
			<source>src/main/resources/configuration/config.ini</source>
			<outputDirectory>eclipse/configuration/</outputDirectory>
		</file>
		<file>
			<source>lib/servletbridge.jar</source>
			<outputDirectory>eclipse/launchers</outputDirectory>
		</file>
		<!--  osgi framework jar must start as "org.eclipse.osgi_xxx.xx.x.jar " -->
		<file>
			<source>lib/org.eclipse.osgi_3.5.1.R35x_v20090827.jar</source>
			<outputDirectory>eclipse/plugins</outputDirectory>
		</file>
		<file>
			<source>lib/org.eclipse.osgi.services_3.2.0.v20090520-1800.jar</source>
			<outputDirectory>eclipse/plugins</outputDirectory>
		</file>
		<file>
			<source>lib/org.eclipse.equinox.common_3.3.0.200704022148.jar</source>
			<outputDirectory>eclipse/plugins</outputDirectory>
		</file>
		<file>
			<source>lib/org.eclipse.equinox.http.registry_1.0.0.200704022148.jar</source>
			<outputDirectory>eclipse/plugins</outputDirectory>
		</file>
			<file>
			<source>lib/org.eclipse.equinox.http.servlet_1.0.0.200704022148.jar</source>
			<outputDirectory>eclipse/plugins</outputDirectory>
		</file>
		
		<file>
			<source>lib/org.eclipse.update.configurator_3.2.100.v20070322.jar</source>
			<outputDirectory>eclipse/plugins</outputDirectory>
		</file>
		<!--  don't include http.servletbridge, it will register a servlet, which cause failure of register servlet later -->
		<!-- file>
			<source>lib/org.eclipse.equinox.http.servletbridge_1.0.0.200704022148.jar</source>
			<outputDirectory>eclipse/plugins</outputDirectory>
		</file -->
		<file>
			<source>lib/sample.http_1.0.0.jar</source>
			<outputDirectory>eclipse/plugins</outputDirectory>
		</file>
	</files>
	
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<unpack>false</unpack>
			<outputDirectory>eclipse/launchers</outputDirectory>
			<includes>
				<include>org.crossbridge.osgi.web:crossbridge</include>
				<include>org.crossbridge:own.bridge</include>				
			</includes>
		</dependencySet>		
	</dependencySets>
</assembly>