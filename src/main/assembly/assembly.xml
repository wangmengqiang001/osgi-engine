<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>osgi-engine-zip</id>	
	<formats>
<!-- 		<format>dir</format> -->
		<format>zip</format>
		<!-- <format>tar.gz</format> -->
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<file>
			<source>src/main/resources/launch.ini</source>
			<outputDirectory>eclipse/</outputDirectory>
		</file>
		<file>
			<source>src/main/resources/configuration/config.ini</source>
			<outputDirectory>eclipse/configuration/</outputDirectory>
		</file>
		<file>
			<source>lib/servletbridge.jar</source>
			<outputDirectory>eclipse/launchers</outputDirectory>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<outputDirectory>eclipse/plugins</outputDirectory>
			<includes>
				<include>lib/org.eclipse.osgi.jar</include>
				<include>lib/org.eclipse.osgi.services_3.2.0.v20090520-1800.jar</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<unpack>false</unpack>
			<outputDirectory>eclipse/launchers</outputDirectory>
			<includes>
				<include>org.crossbridge.osgi.web:crossbridge</include>
				<include>org.crossbridge:own.bridge</include>				
			</includes>
		</dependencySet>		
	</dependencySets>
</assembly>